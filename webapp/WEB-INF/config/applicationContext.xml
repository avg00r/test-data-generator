<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://cxf.apache.org/jaxrs
       http://cxf.apache.org/schemas/jaxrs.xsd">

    <!--load cxf spring bus-->
    <import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

    <bean id="helloRestBean" class="ru.javastudy.ws.webservices.rest.GeneratorRestComponent"/>

    <!--http://localhost:8080/rest/helloRestService/*-->
    <jaxrs:server id="helloRestService" address="/helloRestService">
        <jaxrs:serviceBeans>
            <ref bean="helloRestBean"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>


</beans>